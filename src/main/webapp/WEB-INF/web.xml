<?xml version="1.0" encoding="UTF-8"?>
<web-app id="UploadProgress" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee          http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>Upload Progress</display-name>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
  
    <servlet>
        <servlet-name>uploadprogress</servlet-name>
        <servlet-class>org.adrianwalker.gwt.uploadprogress.server.UploadProgressServlet</servlet-class>
    </servlet>
  
    <servlet-mapping>
        <servlet-name>uploadprogress</servlet-name>
        <url-pattern>/uploadprogress/uploadprogress</url-pattern>
    </servlet-mapping>
  
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>org.adrianwalker.gwt.uploadprogress.server.UploadServlet</servlet-class>
    </servlet>
  
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/uploadprogress/upload</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>download</servlet-name>
        <servlet-class>org.adrianwalker.gwt.uploadprogress.server.DownloadServlet</servlet-class>
    </servlet>
  
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/uploadprogress/download</url-pattern>
    </servlet-mapping>

</web-app>
